{% extends 'KatropineAdminBundle::layout.html.twig' %}

{% block title %}{{'Company'|trans}} {{company.name}} {% endblock %}

{% block bodyheading %}
    {% include 'KatropineAdminBundle:partials:bodyheading.html.twig' with {'title' : 'Company'|trans } %}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-6">
                            <i class="fa fa-check fa-5x"></i>
                        </div>
                        <div class="col-xs-6 text-right">
                            <p class="announcement-heading">{{company.name}}</p>
                            <p class="announcement-text">{{total}} {{'orders'|trans}}</p>
                        </div>
                    </div>
                </div>
                
                <div class="panel-footer announcement-bottom">
                    <div class="row">
                        <div class="col-xs-6">
                            {% include 'KatropineAdminBundle:partials:company-submenu.html.twig' %}
                        </div>
                        <div class="col-xs-6 text-right">
                            <i class="fa fa-arrow-circle-right"></i>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>    
                            
    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="row">
                <div class="col-md-4"><div class="container-fluid"><h2 class="page-heading user">{{'Orders'|trans}}</h2></div></div>
                <div class="col-md-8">
                    <div class="container-fluid">
                        <div class="btn-toolbar" role="toolbar">
                            <div class="btn-group pull-right">paginationHtmlRows</div><div class="btn-group pull-right">{% include 'KatropineAdminBundle:partials:pagination.html.twig' %}</div>
                        </div>
                    </div>
                </div>
            </div>
            
            <table class="table table-hover table-striped">
                <tr>
                    <th>{{'Id'|trans}}</th>
                    <th>{{'Name'|trans}}</th>
                    <th>{{'Price'|trans}}</th>
                    <th>{{'Max_users'|trans}}</th>
                    <th>{{'Period'|trans}}</th>
                    <th>{{'Period_type'|trans}}</th>
                    <th>{{'Start_date'|trans}}</th>
                    <th>{{'End_date'|trans}}</th>
                    <th>{{'Active'|trans}}</th>
                    <th>{{'Paid'|trans}}</th>
                    <th>{{'Created'|trans}}</th>
                    <th></th>
                </tr>
                {% for order in orders %}
                    <tr>
                        <td>{{ order.id }}</td>
                        <td>{{ order.name }}</td>
                        <td>{{ order.price }}</td>
                        <td>{{ order.maxUsers }}</td>
                        <td>{{ order.period }}</td>
                        <td>{{ order.periodType|trans }}</td>
                        <td>{{ order.startDate|date("d.m.Y") }}</td>
                        <td>{{ order.endDate|date("d.m.Y") }}</td>
                        <td>{{ order.status|trans }}</td>
                        <td>{{ (order.paid)? 'Yes'|trans:'No'|trans }}</td>
                        <td>{{ order.subscription.created|date("d.m.Y H:i") }}</td>
                        <td align="right"><a href="{{path('subscribe_activate', {'id':order.id, 'page': page})}}" class="btn btn-success btn-xs">{{'edit'|trans}}</a> <a href="#" class="btn btn-danger btn-xs">{{'delete'|trans}}</a></td>
                    </tr>
                {% endfor %}
            </table>
            <div class="container-fluid">
                <div class="btn-toolbar" role="toolbar">
                    <div class="btn-group pull-right">paginationHtmlRows</div><div class="btn-group pull-right">{% include 'KatropineAdminBundle:partials:pagination.html.twig' %}</div>
                </div>
            </div>
        </div>
    </div>        
{% endblock %}      