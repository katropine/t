{% extends 'KatropineAdminBundle::layout.html.twig' %}

{% block title %}{{'Add_new'|trans}} {{'company'|trans}}{% endblock %}

{% block bodyheading %}
    {% include 'KatropineAdminBundle:partials:bodyheading.html.twig' with {'title' : 'Employment_contract'|trans } %}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <nav class="navbar navbar-default" role="navigation">

            <div class="container-fluid">
                <form class="navbar-form navbar-left" role="search" method="GET">
                    <div class="form-group">
                        <input type="text" name="q" class="form-control" placeholder="{% trans %}Submit{% endtrans %}" value="{{q}}">
                    </div>

                    <button type="submit" class="btn btn-default">{% trans %}Submit{% endtrans %}</button>

                </form>
                <div class="navbar-form navbar-right">
                    
                    <a href="{{path('company_addnew')}}" class="btn btn-primary">{% trans %}Add_new{% endtrans %}</a>
                   
                </div>
            </div>
        </nav>
    </div>
    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="row">
                <div class="col-md-4"><div class="container-fluid"><h2 class="page-heading user"><fmt:message key="users"/></h2></div></div>
                <div class="col-md-8">
                    <div class="container-fluid">
                        <div class="btn-toolbar" role="toolbar">
                            <div class="btn-group pull-right">paginationHtmlRows</div><div class="btn-group pull-right">{% include 'KatropineAdminBundle:partials:pagination.html.twig' %}</div>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-hover table-striped">
                <tr>
                    <th>{{'Id'|trans}}</th>
                    <th>{{'Employment_Type'|trans}}</th>
                    <th></th>
                </tr>
                {% for contract in contracts %}
                <tr>
                    <td>{{ contract.id }}</td>
                    <td><a href="{{ path('company_show', {'id' : contract.id}) }}">{{ contract.name }}</a></td>
                    <td align="right"><a href="{{path('company_edit', {'id': company.id })}}" class="btn btn-success btn-xs">{{'edit'|trans}}</a> <a href="{{path('company_delete', {'id': contract.id })}}" class="btn btn-danger btn-xs">{{'delete'|trans}}</a></td>
                </tr>
                {% endfor %}
            </table>
            <div class="container-fluid">
                <div class="btn-toolbar" role="toolbar">
                    <div class="btn-group pull-right">paginationHtmlRows</div><div class="btn-group pull-right">{% include 'KatropineAdminBundle:partials:pagination.html.twig' %}</div>
                </div>
            </div>
        </div>
    </div>       
{% endblock %}    